    .container {
        
        padding: 0px;
        width: 1341px;
        height: 713px;
        background-image: url(/Content/Styles/dist/img/login.png);
        background-position: left top;
        background-repeat: no-repeat;
        margin:0px auto;
        /**/
    }

    .form-content {
        margin: 0px;
        padding: 0px;
        position: relative;
        top: 216px;
