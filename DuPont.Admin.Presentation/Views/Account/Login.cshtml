        width: 658px;
        height: 288px;
        margin-left: 240px;
    }
    /*手机号码*/
    .phone-number {
        position: absolute;
        top: 115px;
        left: 230px;
        width: 410px;
        border-radius: 3px;
    }

    .password {
        position: absolute;
        top: 166px;
        left: 230px;
        height: 32px;
        width: 410px;
    }

    #LoginUserName {
        background-color: #FFF !important;
        width: 224px;
        height: 32px;
        border: none;
    }

    #Password {
        background-color: #FFF;
        border-radius: 3px;
        width: 224px;
        height: 32px;
    }

    .btn-login {
        position: absolute;
        top: 226px;
        left: 257px;
        height: 34px;
        width: 153px;
        box-shadow: none;
    }

    #Password, #btn_submit {
        border: none;
    }

    #btn_submit {
        background-color: transparent;
    }

    .error-msg {
        position: relative;
        left: 240px;
        top: -25px;
        color:red;
    }
    .breadcrumb{
        display:none;
    }
</style>
<div id="diveditcontent" style="display:none">
    <div style="margin-right: 3px; margin-bottom: 3px; width: 99.7%">
        <div id="divheader" title="Move>">
            <div style="float: left; margin-top: 5px; margin-left: 3px;">
                <strong>
                    当前浏览器版本过低，请使用如下浏览器。
                </strong>
            </div>
        </div>
        <div id="divcontent">
            <ul style=" list-style: none">
                <li style="margin-left:0px;margin-top:15px">
                    <a href="http://chrome.360.cn/"><img src="~/Content/Styles/dist/img/360jsbrowser.jpg" /></a>
                    <span style="margin-left:45px"><a href="http://chrome.360.cn/">点击下载！</a></span>
                </li>
                <li style="margin-left: 0px;margin-top:15px">
                    <a href="http://www.firefox.com.cn/"><img src="~/Content/Styles/dist/img/huohubrowser.jpg" /></a>
                    <span style="margin-left:45px"><a href="http://www.firefox.com.cn/">点击下载！</a></span>
                </li>
            </ul>
        </div>
    </div>
</div>
<script type="text/javascript">
    var agent = navigator.userAgent.toLowerCase();
    //判断当前浏览器是否是ie
    if (isIE = agent.indexOf("msie") != -1) {
        var div_browser = document.getElementById("diveditcontent");
        var number = (agent.match(/msie [\d.]+;/gi) + "").replace(/[^0-9.]/ig, "");
        if (number <= 9) {
            div_browser.style.display = "block";
            //停止加载当前页
            document.execCommand("stop");
        }
    }

</script>
<body>
    <div class="container">
        <div class="form-content">
            @using (Html.BeginForm("Login", "Account", new { @class = "form-horizontal" }))
            {

                @Html.ValidationSummary(true)
                <div class="phone-number">
                    @Html.TextBoxFor(m => m.LoginUserName, new { @class = "form-control", placeholder = "账号名..." })
                    <div class="error-msg">
                        <span>@Html.ValidationMessageFor(m => m.LoginUserName)</span>
                    </div>
                </div>
                <div class="password">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "密码..." })
                    <div class="error-msg">
                        <span>@Html.ValidationMessageFor(m => m.Password)</span>
                    </div>
                </div>
                <div class="btn-login">
                    <button class="form-control" type="submit" id="btn_submit"></button>
                </div>

            }
        </div>
    </div>
</body>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>