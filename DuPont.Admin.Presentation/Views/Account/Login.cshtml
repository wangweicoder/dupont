            text-decoration: underline;
        }

    #divbg {
        width: 100%;
        height: 100%;
        position: absolute;
        z-index: 999;
        top: 0px;
        left: 0px;
        filter: alpha(opacity=50);
        opacity: 0.5;
        background-color: #AAAAAA;
    }

    #divheader {
        width: 100%;
        height: 25px;
        background-color: #BB5500;
    }

    #diveditcontent {
        width: 315px;
        height: 165px;
