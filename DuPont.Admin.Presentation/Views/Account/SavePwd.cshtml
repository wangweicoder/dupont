@model DuPont.Admin.Presentation.Models.UpdateUserInput
@{
    ViewBag.Title = "SavePwd";
    Layout = "~/Views/Shared/_BootstrapLayout.cshtml";
}
<style>
    body {
        background-color: #fff;
        min-height: 600px;
    }

    .mt10 {
        margin-top: 10px;
    }

    .mt15 {
        margin-top: 15px;
    }

    .pt0 {
        padding-top: 0px;
    }

    .mb0 {
        margin-bottom: 0px;
    }

    h4 {
        padding-left: 30px;
        font-weight: bold;
    }

    .ml160 {
        margin-left: 160px;
    }

    .breadcrumb {
        background-color: rgba(72, 154, 51, 0.73);
    }

    .onError {
        width: 400px;
        float: left;
        margin-left: 20px;
    }
</style>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/formValidator-4.1.3.min.js" type="text/javascript"></script>
<script src="~/Scripts/formValidatorRegex.js" type="text/javascript"></script>
<script type="text/javascript">
    @if (Session.Keys.Count==0)
	{
		 <text>
    setTimeout(function () {
        top.window.location.href = "/account/login";
    }, 1500);
    </text>
	}

</script>
<body>
    <h4>修改密码</h4>
    @using (Html.BeginForm("SavePwd", "Account", new { @class = "form-horizontal", name = "", id = "form" }))
    {

        @Html.ValidationSummary(true)
        @Html.Hidden("Id")
        <div style="margin-top:30px">
            <div class="form-group">
                <div class="col-xs-10">
                    <label for="inputEmail" class="control-label col-xs-2">手机号：</label>
                    <div class="col-xs-5" style="width:200px;height:50px">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "手机号...", Readonly = "readonly" })
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.PhoneNumber)</span>
                        <span class="col-xs-2"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-10">
                    <label for="inputEmail" class="control-label col-xs-2">旧密码：</label>
                    <div class="col-xs-5" style="width:200px;height:50px;float:left;">
                        @Html.PasswordFor(m => m.OldPwd, new { @class = "form-control", placeholder = "旧密码..." })
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.OldPwd)</span>
                    </div><span class="col-xs-3" id="OldPwdTip" style="width:400px;float:right"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-10  mt10">
                    <label for="inputPassword" class="control-label col-xs-2">新密码：</label>
                    <div class="col-xs-5" style="width:200px;height:50px;float:left;">
                        @Html.PasswordFor(m => m.NewPwd, new { @class = "form-control", placeholder = "新密码..." })
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.NewPwd)</span>
                    </div><span class="col-xs-3" id="NewPwdTip" style="width:400px;float:right"></span>
                </div>

            </div>

            <div class="form-group" style="clear:both">
                <div class="col-xs-10  mt10">
                    <label for="inputPassword" class="control-label col-xs-2">确认新密码：</label>
                    <div class="col-xs-5" style="width:200px;height:50px;float:left;">
                        @Html.PasswordFor(m => m.SavePwd, new { @class = "form-control", placeholder = "确认密码..." })
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.SavePwd)</span>
                    </div><span class="col-xs-3" id="SavePwdTip" style="width:400px;float:right"></span>
                </div>
            </div>
            <div class="form-group" style="clear:both">
                <div class="col-xs-5  mt15" style="width:200px">
                    <button type="submit" id="btnModify" class="btn btn-sm btn-primary btn-block ml160">修改</button>
                </div>
            </div>
        </div>
    }
</body>
