<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!--css reset-->
    <link href="/Content/normalize.css" rel="stylesheet" />
    <!-- Bootstrap 3.3.4 -->
    <link href="/Content/Styles/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Font Awesome Icons -->
    <link href="/Content/Styles/dist/vendor/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Ionicons -->
    <link href="/Content/Styles/dist/vendor/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    <!-- jvectormap -->
    <link href="/Content/Styles/plugins/jvectormap/jquery-jvectormap-1.2.2.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="/Content/Styles/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link href="/Content/Styles/dist/css/skins/_all-skins.min.css" rel="stylesheet" type="text/css" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="/Content/Styles/dist/vendor/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="/Content/Styles/dist/vendor/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href="~/Content/Styles/Site.css" rel="stylesheet" />
    <link href="/Content/toastr.min.css" rel="stylesheet" />


    <style type="text/css">
        .toast-top-center {
            top: 70px;
        }

        body {
            min-width: 768px;
            width: expression(document.body.clientWidth < 768? "768px": "auto" );
        }

        @@media (max-width: 991px) .navbar-custom-menu > .navbar-nav > li > .dropdown-menu {
            position: absolute; right: 5%; left: 0px; border: 1px solid #ddd; background: #fff;
        }
    </style>
    @RenderSection("HTML_Header", false)
</head>
<body class="skin-green-light sidebar-mini">
    <!--站点-->
    <div class="wrapper">
        <!--logo和导航-->
        <header class="main-header" style=" width:100%;height:90px; background-image: url(/Content/Styles/dist/img/manager_banner.png);">
            <!-- Logo -->
            @*<a href="/admin/index" class="logo">
                    <!-- mini logo for sidebar mini 50x50 pixels -->
                    <span class="logo-mini">DP</span>
                    <!-- logo for regular state and mobile devices -->
                    <span class="logo-lg"><b>杜邦</b>管理后台</span>
                </a>*@

            <!-- Header Navbar: style can be found in header.less -->
            @*<nav class="navbar navbar-static-top" role="navigation">
                    <!-- Sidebar toggle button-->
                    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                        <span class="sr-only">Toggle navigation</span>
                    </a>
                    <!-- Navbar Right Menu -->
                    @{Html.RenderAction("UserInfo", "Account", null);}
                </nav>*@
        </header>

        <!--左侧边栏-->
        <!-- Left side column. contains the logo and sidebar -->
        @*<div style="width:1341px;height:770px; background-image: url(/Content/Styles/dist/img/manager_background.png); ">*@
        <aside class="main-sidebar" style="width:230px; margin-top:60px">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- 侧边栏用户面板 -->
                <!-- 搜索表单 -->
                <nav class="navbar navbar-static-top" role="navigation">

                    @{Html.RenderAction("UserInfo", "Account", null);}
                </nav>
                <form action="#" method="get" class="sidebar-form" style="margin-top:-15px">
                    <div class="input-group">
                        <input type="text" name="qo" class="form-control" placeholder="搜索..." />
                        <span class="input-group-btn">
                            <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </form>
                <!-- /.search form -->
                <!-- sidebar menu: : style can be found in sidebar.less -->
                @{

                    Html.RenderAction("Menu", "Nav");
                }
            </section>
            <!-- /.sidebar -->
        </aside>

        <!--页面内容区域-->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!--内容头部--><!-- /.content-header -->
           
            <section class="content-header">
                <ol class="breadcrumb">
                    @RenderSection("Breadcrumb", false)
                </ol>
            </section>
            <!-- 页面主体内容部分 -->
            <section class="content">
                @RenderBody()
            </section><!-- /.content -->
            <div class="text-center" style="position: absolute; bottom: 0px; left: 30%; font-size: 12px; font-family:微软雅黑; ">
                © 2015-杜邦先锋版权所有，杜邦椭圆形标志、杜邦®，先锋®
                <img src="~/Content/Styles/dist/img/copyright-low.png" />，以及所有标注有TM®的产品和品牌均是杜邦，杜邦先锋或其关联公司的商标活注册商标。
            </div>
        </div><!-- /.content-wrapper -->
    </div>
    @*</div>*@
    <!-- jQuery 2.1.4 -->
    <script src="/Content/Styles/plugins/jQuery/jQuery-2.1.4.min.js" type="text/javascript"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="/Content/Styles/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- FastClick -->
    <script src="/Content/Styles/plugins/fastclick/fastclick.min.js" type="text/javascript"></script>
    <!-- AdminLTE App -->
    <script src="/Content/Styles/dist/js/app.min.js" type="text/javascript"></script>
    <!-- Sparkline -->
    <script src="/Content/Styles/plugins/sparkline/jquery.sparkline.min.js" type="text/javascript"></script>
    <!-- jvectormap -->
    <script src="/Content/Styles/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js" type="text/javascript"></script>
    <script src="/Content/Styles/plugins/jvectormap/jquery-jvectormap-world-mill-en.js" type="text/javascript"></script>
    <!-- SlimScroll 1.3.0 -->
    <script src="/Content/Styles/plugins/slimScroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <!-- ChartJS 1.0.1 -->
    <script src="/Content/Styles/plugins/chartjs/Chart.min.js" type="text/javascript"></script>
    <script src="/Scripts/toastr.min.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    @*<script src="dist/js/pages/dashboard2.js" type="text/javascript"></script>*@
    <!-- AdminLTE for demo purposes -->
    @*<script src="dist/js/demo.js" type="text/javascript"></script>*@
  

    @RenderSection("HTML_Footer", false)
    <!--https://www.almsaeedstudio.com/themes/AdminLTE/documentation/index.html#layout-->

    <script>
        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-center",
            "preventDuplicates": true,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "2000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };
        function getParentHeight() {
            return $(document.body).height(true);
        }

        function Success(msg) {
            toastr["success"](msg);
        }

        function Warn(msg) {
            toastr["warning"](msg);
        }
    </script>

</body>
</html>
