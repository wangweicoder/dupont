        }

        .h1 {
            height: 1px;
        }

        .bg-gray {
            background-color: gray;
        }

        .select2 {
            width: auto !important;
            height: 32px !important;
        }

        .mr10 {
            margin-right: 10px;
        }

        .mr20 {
            margin-right: 20px;
        }

        .border-dashed {
            border-bottom: 1px dashed #ccc;
        }

        .fmyahei {
            font-family: 'Microsoft YaHei';
        }

        .pt0 {
            padding-top: 0px;
        }

        .mt0 {
            margin-top: 0px !important;
        }

        .mb0 {
            margin-bottom: 0px;
        }

        .p0 {
